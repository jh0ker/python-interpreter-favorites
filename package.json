{
  "name": "python-interpreter-favorites",
  "displayName": "Python Interpreter Favorites",
  "description": "Quickly switch between your favorite Python interpreters with a simple dropdown",
  "version": "0.1.0",
  "publisher": "jhoeke",
  "author": {
    "name": "jhoeke"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jh0ker/python-interpreter-favorites"
  },
  "bugs": {
    "url": "https://github.com/jh0ker/python-interpreter-favorites/issues"
  },
  "keywords": [
    "python",
    "interpreter",
    "environment",
    "venv",
    "virtualenv",
    "conda",
    "favorites",
    "bookmarks"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pythonInterpreterFavorites.selectInterpreter",
        "title": "Python: Select Favorite Interpreter"
      }
    ],
    "configuration": {
      "title": "Python Interpreter Favorites",
      "properties": {
        "pythonInterpreterFavorites.interpreters": {
          "type": "array",
          "default": [],
          "description": "List of favorite Python interpreters",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string",
                "description": "Display name for the interpreter"
              },
              "path": {
                "type": "string",
                "description": "Full path to the Python interpreter"
              }
            },
            "required": [
              "label",
              "path"
            ]
          },
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
